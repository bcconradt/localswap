# Database (Neon PostgreSQL recommended)
DATABASE_URL="postgresql://user:password@ep-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require"

# Authentication
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# =============================================================================
# SMS Verification (Optional - uses mock codes if not configured)
# =============================================================================
# Get credentials from https://console.twilio.com
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_PHONE_NUMBER=""

# =============================================================================
# File Storage - Cloudflare R2 (Recommended)
# =============================================================================
# Get these from Cloudflare Dashboard > R2 > Manage R2 API Tokens
R2_ACCOUNT_ID=""
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_BUCKET_NAME="localswap-uploads"
R2_PUBLIC_URL=""  # e.g., https://pub-xxx.r2.dev or your custom domain

# =============================================================================
# File Storage - AWS S3 (Alternative to R2)
# =============================================================================
# AWS_ACCESS_KEY_ID=""
# AWS_SECRET_ACCESS_KEY=""
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET="localswap-uploads"

# =============================================================================
# Environment
# =============================================================================
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
